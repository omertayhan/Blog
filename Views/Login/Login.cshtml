@{
    ViewData["Title"] = "Login";
}
<!-- Page Header-->
<header class="masthead" style="background-image: url('@Url.Content("~/img/home-bg.jpg")')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>@localizer["Blogs"]</h1>
                    <span class="subheading">@localizer["DiaryTufan"]</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div id="loginModal" class="row gx-4 gx-lg-5 mb-4 justify-content-center">
        <div class="card col-sm-4">
            <article class="card-body">
                <h4 class="card-title text-center mb-4 mt-1">@localizer["LogIn"]</h4>
                <h7 class="card-title mb-4 mt-1">@localizer["String1"] </h7>
                <a href="@Url.Action("SignIn", "Login")" class="float-right btn btn-outline-primary">@localizer["SignIn"]</a>
                <form method="post" action="/Login/LoginControl">
                    <div class="form-group">
                        <label>@localizer["YourEmail"]</label>
                        <input name="Email" class="form-control" placeholder="Email" type="email">
                    </div>
                    <div class="form-group">
                        <label>@localizer["YourPassword"]</label>
                        <input name="Password" class="form-control" placeholder="******" type="password">
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label> <input type="checkbox"> @localizer["Savepassword"] </label>
                        </div>
                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary btn-block mt-1"> @localizer["LogIn"] </button>
                    </div>
                </form>
            </article>
        </div>
    </div>
</div>
