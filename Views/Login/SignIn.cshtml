@{
    ViewData["Title"] = "Sign In Page";
}
<div id="signInModal" class="row gx-4 gx-lg-5 mb-6 justify-content-center">
    <div class="card col-sm-4">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Sign in</h4>
            <h7 class="card-title mb-4 mt-1">Go back to Login: </h7>
            <a href="@Url.Action("Login", "Login")" class="float-right btn btn-outline-primary">Login</a>
            <form method="post" action="/Login/SignInAdd">
                <div class="form-group mb-2">
                    <div class="input-group-prepend mb-2">
                        <span class="input-group-text "> <i class="fa fa-user"></i> </span>
                    </div>
                    <div class="form-group mb-2">
                        <input type="hidden" name="Id" id="Id" class="form-control">
                        <input type="text" name="Name" id="Name" class="form-control" placeholder="Your Name" required">
                    </div>
                    <div class="form-group mb-2">
                        <input type="text" name="Surname" id="Surname" class="form-control" placeholder="Your Surname" required>
                    </div>
                    <div class="form-group mb-2">
                        <input type="text" name="Email" id="Email" class="form-control" placeholder="Your Email" required>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <div class="input-group-prepend mb-2">
                        <span class="input-group-text "> <i class="fa fa-lock"></i> </span>
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" id="Password" class="form-control" placeholder="Your Password" required>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block mt-1"> Sign In  </button>
                </div>
            </form>
        </article>
    </div>
</div>

