@{
    ViewData["Title"] = "SignIn";
}
<header class="masthead" style="background-image: url('@Url.Content("~/img/home-bg.jpg")')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>@localizer["Blogs"]</h1>
                    <span class="subheading">@localizer["DiaryTufan"]</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div id="signInModal" class="row gx-4 gx-lg-5 mb-4 justify-content-center">
        <div class="card col-sm-4">
            <article class="card-body">
                <h4 class="card-title text-center mb-4 mt-1">@localizer["SignUp"]</h4>
                <h7 class="card-title mb-4 mt-1">@localizer["String1"] </h7>
                <a href="@Url.Action("Login", "Login")" class="float-right btn btn-outline-primary">@localizer["LogIn"]</a>
                <form class="mt-2" method="post" action="/Login/SignInAdd">
                    <div class="form-group mb-2">
                        <div class="input-group-prepend mb-2">
                            <span class="input-group-text "> <i class="fa fa-user"></i> </span>
                        </div>
                        <div class="form-group mb-2">
                            <input type="hidden" name="Id" id="Id" class="form-control">
                            <label>@localizer["YourName"]</label>
                            <input type="text" name="Name" id="Name" class="form-control" placeholder="Your Name" required>
                        </div>
                        <div class="form-group mb-2">
                            <label>@localizer["YourSurname"]</label>
                            <input type="text" name="Surname" id="Surname" class="form-control" placeholder="Your Surname" required>
                        </div>
                        <div class="form-group mb-2">
                            <label>@localizer["YourEmail"]</label>
                            <input type="email" name="Email" id="Email" class="form-control" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-group mb-2">
                        <div class="input-group-prepend mb-2">
                            <span class="input-group-text "> <i class="fa fa-lock"></i> </span>
                        </div>
                        <div class="form-group">
                            <label>@localizer["YourPassword"]</label>
                            <input type="password" name="Password" id="Password" class="form-control" placeholder="Your Password" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block mt-1"> @localizer["SignIn"]  </button>
                    </div>
                </form>
            </article>
        </div>
    </div>
</div>