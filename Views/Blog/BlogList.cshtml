@model IEnumerable<Blog>
@{
    ViewData["Title"] = "BlogList";
}
<a href="@Url.Action("BlogAdd", "Blog")" class="float-right btn btn-outline-primary">Add New Post</a>

<table class="table table-hover mb-4">
    <thead>
    <th scope="col">Id</th>
    <th scope="col">Title</th>
    <th scope="col">Subtitle</th>
    <th scope="col">Category</th>
    <th scope="col">Created Date</th>
    <th scope="col">Options</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Subtitle</td>
                <td>@item.Category</td>
                <td>@item.CreateTime</td>
                <td>
                    @if (item.IsPublish)
                    {
                        <a class="btn btn-success" >Published</a>
                    }
                    else
                    {
                        <a class="btn btn-secondary" href="@Url.Action("Publish", "Blog", new { id = item.Id})" >Publish</a>
                    }
                    @*  <button class="btn btn-secondary" onclick="updateForm(@item.Id)" type="button">Update</button>*@
                </td>
            </tr>
        }
    </tbody>
</table>